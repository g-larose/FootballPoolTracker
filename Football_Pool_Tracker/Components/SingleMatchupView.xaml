<UserControl x:Class="Football_Pool_Tracker.UI.Components.SingleMatchupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Football_Pool_Tracker.UI.Components"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <md:Card md:ElevationAssist.Elevation="Dp2"
             UniformCornerRadius="6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                 <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Column="0"
                    CornerRadius="50"
                    Height="74"
                    Width="74">
                <Image 
                   Height="64"
                   Width="64"
                   Source="{Binding Path=AwayTeam.ImageUrl, FallbackValue=/Assets/Logo/img_default.png}"
                   Stretch="Fill" 
                   Margin="6"/>
            </Border>
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="4 0">
                <TextBlock Text="{Binding Path=AwayTeam.Name, FallbackValue=TeamName}" 
                           Foreground="WhiteSmoke"
                           FontSize="14"
                           FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    
                    <TextBlock Text="Record"
                           Foreground="WhiteSmoke"
                           FontSize="14"
                           FontWeight="Bold" />
                    <TextBlock Text="(1-1-0)"
                               Foreground="WhiteSmoke"
                               FontSize="12" 
                               Margin="6 2"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Div"
                               Foreground="WhiteSmoke"
                               FontSize="14"
                               FontWeight="Bold" />
                </StackPanel>
               
            </StackPanel>
            <TextBlock Grid.Column="2" 
                       Text="Score"
                       VerticalAlignment="Center"
                       Foreground="WhiteSmoke"
                       FontSize="14"
                       FontWeight="Bold" />         
        </Grid>
    </md:Card>
</UserControl>
